<div class="section">
    <div class="container">
        <div class="row">
            <div class="col-md-6 m-auto">
                <h2 class="text-center mt-3">Update Doctor</h2>
                <form class="mb-5 mt-3" action="/doctor/edit-doctor/{{doctor._id}}" method="POST" enctype="multipart/form-data">

                    <label for="exampleInputEmail1">Name</label>
                    <input type="text" class="form-control" name="drName" value="{{doctor.drName}}">



                    <label for="exampleInputPassword1">Specilised</label>
                    <input type="text" class="form-control" name="drSpecialised" value="{{doctor.drSpecialised}}">


                    <label for="exampleInputPassword1">Speciality</label>
                    <input type="text" class="form-control" name="drSpeciality"value="{{doctor.drSpeciality}}">

                    <label for="email">Email</label>
                    <input type="email" class="form-control" name="drEmail" value="{{doctor.drEmail}}">



                    <label for="exampleInputPassword1">Password</label>
                    <input type="password" class="form-control" name="drPassword" value="{{doctor.drPassword}}">

                    <div class="form-group">
                        <label for="">Image</label>
                        <img src="/doctor-images/{{doctor._id}}.jpg" id="imgView" class="mt-3 mb-3" style="width: 50px;height:auto" alt="">
                        <input type="file" name="Image" class="form-control-file" onchange="viewImage(event)" >
                    </div>
                    <button type="submit" class="btn btn-success">Submit</button>
                    <input type="hidden" id="Status" name="Status" value="Active">
                </form>
            </div>
        </div>
    </div>
</div>
<script>
   function viewImage(event){
       document.getElementById('imgView').src = URL.createObjectURL(event.target.files[0])
   }
</script>