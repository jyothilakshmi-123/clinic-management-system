<div class="section">
    <div class="container mb-5">
        <div class="col-md-6 m-auto">   
            <form action="/signup" method="post" class="mt-5 pl-5">
                <h2 class="text-center">Create new Account</h2>
                <div class="form-group">
                    <label for="name">Name</label>
                    <input type="text" class="form-control" name="ptName">
                </div>
                <div class="form-group">
                    <label for="age">Age</label>
                    <input type="number" class="form-control" name="ptAge">
                </div>
                <div class="form-group">
                    <label for="mobile">Mobile Number</label>
                    <input type="text" class="form-control" name="ptMobile">
                </div>
                <div class="form-group">
                    <label for="email">Email address:</label>
                    <input type="email" class="form-control" placeholder="Enter email" name="ptEmail">
                </div>
                <div class="form-group">
                    <label for="pwd">Password:</label>
                    <input type="password" class="form-control" placeholder="Enter password" name="ptPassword">
                </div>

                <small class="text-muted">
                    Already have an account? <a href="user/user-login" class="ml-2">Login</a>
                </small>
                <button type="submit" class="btn btn-primary float-right">Submit</button>
            </form>
        </div>
    </div>
</div>