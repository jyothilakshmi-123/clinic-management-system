<div class="section">
    <div class="container">
        <div class="row">
            <div class="col-md-6 m-auto">
                <h2 class="text-center mt-3">Add Doctor</h2>
                <form class="mb-5 mt-3" action="/admin/add-doctor" method="POST" enctype="multipart/form-data">

                    <label for="exampleInputEmail1">Name</label>
                    <input type="text" class="form-control" name="drName">



                    <label for="exampleInputPassword1">Specialised</label>
                    <input type="text" class="form-control" name="drSpecialised">


                    <label for="exampleInputPassword1">Speciality</label>
                    <input type="text" class="form-control" name="drSpeciality">


                    <label for="exampleInputPassword1">Password</label>
