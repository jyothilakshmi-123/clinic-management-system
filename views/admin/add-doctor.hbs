<div class="section">
    <div class="container-fluid" style="background-color: rgb(241, 253, 253);">
        <div class="row">
            <div class="col-md-6 m-auto">
                
                <form class="mb-5 mt-5" action="/admin/add-doctor" method="POST" enctype="multipart/form-data">
                    <div class="login p-5 mb-5"
                    style="border-color: rgb(58, 20, 146);background-color: rgb(247, 252, 253); border-style: double;border-radius: 10px; color: rgb(24, 22, 13);">
                        <h2 class="text-center mt-3" style=" font-family: Georgia, 'Times New Roman', Times, serif; color: rgb(24, 14, 117); font-size: x-large;  font-weight: bold;">Add Doctor</h2>

                        <label for="exampleInputEmail1">Name</label>
                        <input type="text" style="border-radius: 10px;" class="form-control" name="Doctor_Name" placeholder="Enter Doctor Name">



                        <label for="exampleInputPassword1">Specialised</label>
                        <input type="text"style="border-radius: 10px;" class="form-control" name="Doctor_Specialised"
                            placeholder="Enter Doctor Specialised">


                        <label for="exampleInputPassword1">Speciality</label>
                        <input type="text"style="border-radius: 10px;" class="form-control" name="Doctor_Speciality"
                            placeholder="Enter Doctor Speciality">

                        <label for="email">Username</label>
                        <input type="email" style="border-radius: 10px;" class="form-control" name="Doctor_Email" placeholder="Enter the username">


                        <label for="exampleInputPassword1">Password</label>
                        <input type="password"style="border-radius: 10px;" class="form-control" name="Doctor_Password"
                            placeholder="Enter the Password">
                        <div class="form-group" style="border-radius: 10px;">
                            <label for="">Image</label>
                            <img src="/doctor-images/default.png" id="imgView" class="mt-3 mb-3"
                                style="width: 50px;height:auto" alt="">
                            <input type="file" name="Image" class="form-control-file" onchange="viewImage(event)">
                        
                        <button type="submit" style=" background-color: rgb(12, 10, 122); border-radius: 10px;" class="btn btn-success mb-5 float-right" style="border-radius: 10px;">Submit</button>
                        </div>
                        <input type="hidden" id="Status" name="Status" value="Active">
                    </div>

                </form>

            </div>
        </div>
    </div>
</div>
<script>
    function viewImage(event) {
        document.getElementById('imgView').src = URL.createObjectURL(event.target.files[0])
    }
</script>
