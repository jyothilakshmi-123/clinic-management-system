<div class="section">
    <div class="container">
        <div class="row">
            <div class="col-md-6 m-auto">
                <h2 class="text-center mt-3">Add Doctor</h2>
                <form class="mb-5 mt-3" action="/admin/add-doctor" method="POST" enctype="multipart/form-data">

                    <label for="exampleInputEmail1">Name</label>
                    <input type="text" class="form-control" name="Doctor_Name" placeholder="Enter Doctor Name">



                    <label for="exampleInputPassword1">Specialised</label>
                    <input type="text" class="form-control" name="Doctor_Specialised" placeholder="Enter Doctor Specialised">


                    <label for="exampleInputPassword1">Speciality</label>
                    <input type="text" class="form-control" name="Doctor_Speciality" placeholder="Enter Doctor Speciality">

                    <label for="email">Username</label>
                    <input type="email" class="form-control" name="Doctor_Email" placeholder="Enter the username">


                    <label for="exampleInputPassword1">Password</label>
                    <input type="password" class="form-control" name="Doctor_Password" placeholder="Enter the Password">
                    <div class="form-group">
                        <label for="">Image</label>
                        <img src="/doctor-images/default.png" id="imgView" class="mt-3 mb-3"
                            style="width: 50px;height:auto" alt="">
                        <input type="file" name="Image" class="form-control-file" onchange="viewImage(event)">
                    </div>
                    <button type="submit" class="btn btn-success mb-5">Submit</button>
                    <input type="hidden" id="Status" name="Status" value="Active">
                   
                </form>

            </div>
        </div>
    </div>
</div>
<script>
    function viewImage(event) {
        document.getElementById('imgView').src = URL.createObjectURL(event.target.files[0])
    }
</script>
