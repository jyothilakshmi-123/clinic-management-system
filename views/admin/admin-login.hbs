<div class="section">
    <div class="container mb-5 pb-5 ">
        <div class="col-md-6 m-auto">
            <form action="/admin" method="post" class="mt-5">
                <div class="login p-5" style="border-color: rgb(58, 20, 146);border-style: double;border-radius: 10px;">
                    <h2 class="text-center" style=" font-size: x-large;font-family: Georgia, 'Times New Roman', Times, serif;color: rgb(37, 11, 105); font-weight: bold;">Login</h2>

                    <div class="form-group">
                        <label for="email">Email address:</label>
                        <input type="email" style="border-color: rgb(58, 20, 146);border-style: double;border-radius: 10px;" class="form-control" placeholder="Enter email" name="Email">
                    </div>
                    <div class="form-group">
                        <label for="pwd">Password:</label>
                        <input type="password" style="border-color: rgb(58, 20, 146);border-style: double;border-radius: 10px;" class="form-control" placeholder="Enter password" name="Password">
                    </div>
                    {{#if LoginErr}}
                    <div>
                        <p class="text-danger">{{LoginErr}}</p>
                        {{!-- <button class="btn btn-danger"></button> --}}
                    </div>
                    {{/if}}
                    <button type="submit"style=" background-color: rgb(12, 10, 122); border-radius: 10px;" class="btn text-white float-right ">Submit</button>
                </div>
            </form>
        </div>
    </div>
</div>